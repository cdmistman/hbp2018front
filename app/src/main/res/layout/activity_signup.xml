<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context="com.coolkids.todo.todoapp.SignUpActivity">

    <TextView
        android:id="@+id/sign-up_text"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:fontFamily="sans-serif"
        android:text="SIGN UP"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
        android:textColor="#212121"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/first_name_field"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/sign-up_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="#E0E0E0"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="  First Name"
        android:inputType="textPersonName"
        android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
        android:textColorHint="#757575"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/last_name_field"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/first_name_field"
        android:layout_below="@+id/first_name_field"
        android:layout_marginTop="27dp"
        android:background="#E0E0E0"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="  Last Name"
        android:inputType="textPersonName"
        android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
        android:textColorHint="#757575"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/username_field"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/last_name_field"
        android:layout_below="@+id/last_name_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="#E0E0E0"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="  Username"
        android:inputType="textPersonName"
        android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
        android:textColorHint="#757575"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/email_field"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/username_field"
        android:layout_below="@+id/username_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="#E0E0E0"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="  Email"
        android:inputType="textPersonName"
        android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
        android:textColorHint="#757575"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/password_field"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/email_field"
        android:layout_below="@+id/email_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="#E0E0E0"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="  Password"
        android:inputType="textPersonName"
        android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
        android:textColorHint="#757575"
        android:textSize="16dp"  />

    <EditText
        android:id="@+id/confirm_password_field"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/password_field"
        android:layout_below="@+id/password_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="#E0E0E0"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="  Confirm Password"
        android:inputType="textPersonName"
        android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
        android:textColorHint="#757575"
        android:textSize="16dp" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/confirm_password_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#0091EA"
        android:elevation="10dp"
        android:text="Confirm"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:fontFamily="sans-serif"
        android:onClick="confirmCredentials"/>

    <TextView
        android:id="@+id/error_text"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/holo_red_light"
        android:text="ERROR: INVALID CREDENTIALS!"
        android:textAlignment="center"
        android:visibility="gone"/>


    </RelativeLayout>


