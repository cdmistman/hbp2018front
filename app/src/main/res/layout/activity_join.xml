<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context="com.coolkids.todo.todoapp.JoinActivity">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:textColor="#212121"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textSize="50dp"
        android:text="Please enter your" />

    <TextView
        android:id="@+id/textView2"
        android:layout_below="@+id/textView1"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:textColor="#212121"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textSize="50dp"
        android:text="code below:" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:background="#E0E0E0"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:hint="CODE"
        android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
        android:textColorHint="#757575"
        android:textSize="40dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        app:cardBackgroundColor="#0091EA"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/cardView2"
            android:layout_alignStart="@+id/cardView2">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="JOIN!"
                android:textColor="#fff"
                android:textSize="48dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
