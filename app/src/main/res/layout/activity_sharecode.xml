<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context="com.coolkids.todo.todoapp.ShareCodeActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_marginTop="70dp"
        android:textColor="#212121"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textSize="50dp"
        android:text="Your Personalized" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView1"
        android:layout_marginTop="112dp"
        android:fontFamily="sans-serif"
        android:text="6 digit code"
        android:textAlignment="center"
        android:textColor="#212121"
        android:textSize="50dp" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_below="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp"
        android:background="#E0E0E0"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:text="ABC123"
        android:textAlignment="center"
        android:textColor="#212121"
        android:textSize="50dp"
        android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
        android:textColorHint="#757575" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_below="@+id/editText1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        app:cardBackgroundColor="#0091EA"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/cardView2"
            android:layout_alignStart="@+id/cardView2">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="INVITE!"
                android:textColor="#fff"
                android:textSize="48dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
